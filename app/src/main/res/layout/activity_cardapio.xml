<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cardapio">


    <TextView
        android:id="@+id/guarni_o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/guarni_o"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lista"/>

    <TextView
        android:id="@+id/acompanhamentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/acompanhamento"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/proteinaDisponivel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/proteinaDisponivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/proteinas_1"
        android:layout_marginStart="7dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diaDaSemana"
        />

    <View
        android:id="@+id/ContainerTop"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ImgLogoUFC"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:contentDescription="@string/des_img_ufc"
        android:src="@drawable/logo_ufc"
        app:layout_constraintEnd_toEndOf="@+id/ContainerTop"
        app:layout_constraintStart_toStartOf="@+id/ContainerTop"
        app:layout_constraintTop_toTopOf="@+id/ContainerTop" />

    <TextView
        android:id="@+id/cardapio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/cardapio_ufc_itapaje"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/feijoada"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ContainerTop" />

    <ImageView
        android:id="@+id/feijoada"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/feijoada"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardapio" />

    <TextView
        android:id="@+id/diaDaSemana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/segunda"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feijoada"
        tools:layout_editor_absoluteX="144dp" />

    <TextView
        android:id="@+id/lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="7dp"
        android:textSize="16sp"
        android:text="@string/acompanhamento_1"
        app:layout_constraintTop_toBottomOf="@id/acompanhamentos"/>

    <TextView
        android:id="@+id/guarni_o1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guarni_o_1"
        android:textSize="16sp"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toBottomOf="@id/guarni_o"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/salada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/salada"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guarni_o1"/>

    <TextView
        android:id="@+id/salada_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/salada_1"
        android:textSize="16sp"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toBottomOf="@id/salada"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <ImageButton
        android:id="@+id/btnNextCardapio"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/desc_button2"
        android:src="@drawable/ic_btn_next"
        android:textColorLink="#BC3030"
        app:layout_constraintRight_toRightOf="@id/feijoada"
        app:layout_constraintTop_toTopOf="@id/feijoada"
        app:layout_constraintBottom_toBottomOf="@id/feijoada"/>


</androidx.constraintlayout.widget.ConstraintLayout>