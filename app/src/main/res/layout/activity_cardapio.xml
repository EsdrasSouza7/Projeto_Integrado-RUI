<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/Cardapio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TelaCardapio">

    <View
        android:id="@+id/view"
        style="@style/GradientAzul"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ContainerTop"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:src="@drawable/logo_ufc"
        app:layout_constraintEnd_toEndOf="@+id/ContainerTop"
        app:layout_constraintTop_toTopOf="@+id/ContainerTop"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/des_img_ufc" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@id/ContainerTop"
        app:layout_constraintEnd_toEndOf="@id/ContainerTop"
        app:layout_constraintTop_toTopOf="@id/ContainerTop"
        android:text="@string/txt_Tela_Cardapio"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnAbrirSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:text="Abrir Site" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
