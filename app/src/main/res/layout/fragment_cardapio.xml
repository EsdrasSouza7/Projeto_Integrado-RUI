<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BackGround"
    android:padding="10dp">

    <TextView
        android:id="@+id/textoDia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:text="Segunda Feira:"
        android:textSize="25sp"
        android:textColor="@color/Azul3"

        android:gravity="center"
        android:fontFamily="sans-serif-black"
        />

    <View
        android:id="@+id/linha1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/textoDia"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <View
        android:id="@+id/containCardapio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linha1"
        android:layout_marginTop="10dp"

        android:background="@color/Azul3"
        />

    <View
        android:id="@+id/viewCarneVermelha"
        android:layout_width="120dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="@id/containCardapio"
        app:layout_constraintStart_toStartOf="@id/containCardapio"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"

        android:background="@color/Primaria"
        />

    <TextView
        android:id="@+id/tituloViewCarneVermelha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/viewCarneVermelha"
        app:layout_constraintStart_toStartOf="@id/viewCarneVermelha"
        app:layout_constraintEnd_toEndOf="@id/viewCarneVermelha"

        android:text="Carne Vermelha:"
        android:textColor="@color/white"

        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/conteudoCarneVermelha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tituloViewCarneVermelha"
        app:layout_constraintStart_toStartOf="@id/viewCarneVermelha"
        app:layout_constraintEnd_toEndOf="@id/viewCarneVermelha"
        app:layout_constraintBottom_toBottomOf="@id/viewCarneVermelha"

        android:textColor="@color/white"
        android:text="Suino Fatiado Acebolado"

        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:textSize="17sp"
        />


    <View
        android:id="@+id/viewCarneBranca"
        android:layout_width="120dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="@id/containCardapio"
        app:layout_constraintStart_toStartOf="@id/containCardapio"
        app:layout_constraintEnd_toEndOf="@id/containCardapio"
        android:layout_marginTop="10dp"

        android:background="@color/Primaria"
        />

    <TextView
        android:id="@+id/tituloViewCarneBranca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/viewCarneBranca"
        app:layout_constraintStart_toStartOf="@id/viewCarneBranca"
        app:layout_constraintEnd_toEndOf="@id/viewCarneBranca"

        android:text="Carne Branca:"
        android:textColor="@color/white"

        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/conteudoCarneBranca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tituloViewCarneBranca"
        app:layout_constraintStart_toStartOf="@id/viewCarneBranca"
        app:layout_constraintEnd_toEndOf="@id/viewCarneBranca"
        app:layout_constraintBottom_toBottomOf="@id/viewCarneBranca"

        android:textColor="@color/white"
        android:text="Frango em Cubos com Calabresa"

        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:textSize="17sp"
        />

    <View
        android:id="@+id/viewCarneVegetariana"
        android:layout_width="120dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="@id/containCardapio"
        app:layout_constraintEnd_toEndOf="@id/containCardapio"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"

        android:background="@color/Primaria"
        />

    <TextView
        android:id="@+id/tituloViewCarneVegetariana"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/viewCarneVegetariana"
        app:layout_constraintStart_toStartOf="@id/viewCarneVegetariana"
        app:layout_constraintEnd_toEndOf="@id/viewCarneVegetariana"

        android:text="Carne Vegetariana:"
        android:textColor="@color/white"

        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/conteudoCarneVegetariana"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tituloViewCarneVegetariana"
        app:layout_constraintStart_toStartOf="@id/viewCarneVegetariana"
        app:layout_constraintEnd_toEndOf="@id/viewCarneVegetariana"
        app:layout_constraintBottom_toBottomOf="@id/viewCarneVegetariana"

        android:textColor="@color/white"
        android:text="Almodegas de Batata com Letilhas"

        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:textSize="17sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/viewCarneBranca"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acompanhamento:"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/ConteudoAcompanhamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arroz com passas e Feijão Fradinho"

            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grarnição:"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/ConteudoGuarnicao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Macarrão Alho e Oleo"

            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salada:"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/ConteudoSalada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salada Refogada de Repolho Branco e Cenoura"

            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bebida:"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/ConteudoBebida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suco/Acerola"

            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sobremesa:"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/ConteudoSobremesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doce e Melão"

            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>